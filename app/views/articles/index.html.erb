<div>
  <div class="p-2 m-4">
      <%= form_tag query_logs_path, method: :post do %>
         <%= text_field_tag :search_term %>
         <%= submit_tag "Search" %>
      <% end %>
  </div>

  <div>
    <h4>Similar searches</h4>
      <% @poular_searches.each do |search| %>
            <p><%= search.search_term %></p>
         <% end %>
  </div>

   <h1>Articles</h1>
     <% @articles.each do |article| %>
         <div class="p-3 my-2 border-gray-400">
            <h3><%= link_to article.title, article %></h3>
            <p><%= article.body %></p>
         </div>
      <% end %>
</div>